#include <stdint.h>
#include <iostream>
#include <math.h>
#define M_PI   3.14159265358979323846264338327950288

using namespace std;

// converting degrees to radians

long double toRadians(long double degree)
{
    long double radian = (degree *(M_PI)) / 180;
    return (radian);
}
long double distance(long double lat1, long double long1,
                     long double lat2, long double long2)
{

    // Convert the latitudes and longitudes from degree to radians

    lat1 = toRadians(lat1);
    long1 = toRadians(long1);
    lat2 = toRadians(lat2);
    long2 = toRadians(long2);

    // Haversine Formula
     long double dlong = long2 - long1;
     long double dlat = lat2 - lat1;

     long double ans = pow(sin(dlat / 2), 2)
                          + cos(lat1) * cos(lat2)
                          * pow(sin(dlong / 2), 2);

    ans = 2 * asin(sqrt(ans));

    // Radius of Earth in Kilometers, R = 6371
    
    long double R = 6371;

    // Calculate the result
    ans = ans * R;

    return ans;
}

//  Code
int main()
{
    long double lat1 = 29.97963198356166;
    long double long1 = 31.25893232521584;
    long double lat2 = 29.978783633913597;
    long double long2 = 31.259306919058684;

    // call the distance function

    cout << distance(lat1, long1,
                     lat2, long2) << " K.M";

    return 0;
}
